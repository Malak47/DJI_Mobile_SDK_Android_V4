<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_ILM_BatteryTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/battery"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_SpeedTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/speed"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_DistanceTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/distance"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_XTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_YTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/y"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_ZTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/z"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_PitchTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pitch"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_RollTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/roll"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_YawTxt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/yaw"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_DateTxt"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time_amp_date"
                android:textColor="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_ILM_BatteryInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0per"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_SpeedInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0_m_s"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_DistanceInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0_m"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_XInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_YInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_ZInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_PitchInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/RolltextView_ILM_RollInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_YawInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_DateInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time_date"
                android:textColor="#FF0000" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_ILM_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="0dp"
            android:text="@string/stop" />

        <Button
            android:id="@+id/btn_ILM_Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/btn_ILM_Stop"
            android:text="@string/land" />

        <Button
            android:id="@+id/btn_ILM_GoTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/btn_ILM_Land"
            android:text="@string/go_to" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="416dp"
        android:layout_height="273dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.382">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp">

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/videoFeedView_ILM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp" />

            <View
                android:id="@+id/view_ILM_coverView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="visible" />
        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView_ILM_Latitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:text="@string/latitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Longitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Latitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp"
            android:text="@string/longitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Altitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Longitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/altitude_0"
            android:textColor="#FF1100" />
    </RelativeLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/mapView_ILM"
        titlesource='Mapnik'
        android:layout_width="259dp"
        android:layout_height="153dp"
        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>