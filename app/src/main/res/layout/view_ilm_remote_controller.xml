<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dji.sdk.sample.demo.ILM.ILMRemoteControllerView">

    <RelativeLayout
        android:id="@+id/buttons_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_ILM_Take_Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/round_btn"
            android:text="@string/take_off"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_ILM_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Take_Off"
            android:background="@drawable/round_btn"
            android:text="@string/stop"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ILM_Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Stop"
            android:background="@drawable/round_btn"
            android:text="@string/land"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ILM_GoTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Land"
            android:background="@drawable/round_btn"
            android:text="@string/go_to"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ILM_EnableVirtualStick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_GoTo"
            android:background="@drawable/ilm_virtual_stick_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titude_relativLayout"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons_relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView_ILM"
        app:layout_constraintVertical_bias="0.87">

        <TextView
            android:id="@+id/textView_ILM_Latitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:text="@string/latitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Longitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Latitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:text="@string/longitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Altitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Longitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:text="@string/altitude_0"
            android:textColor="#FF1100" />
    </RelativeLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/mapView_ILM"
        titlesource='Mapnik'
        android:layout_width="259dp"
        android:layout_height="153dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/video_relativeLaout"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout
        android:id="@+id/video_relativeLaout"
        android:layout_width="416dp"
        android:layout_height="273dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp">

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/videoFeedView_ILM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp" />

            <View
                android:id="@+id/view_ILM_coverView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="visible" />
        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>